datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For local auth
  phone         String?
  carBrand      String?
  carModel      String?
  role          String    @default("USER") // USER, ADMIN

  accounts      Account[]
  sessions      Session[]
  comments      Comment[]
  votes         Vote[]
  posts         BlogPost[]
  experiences   Experience[]
  systemLogs    SystemLog[]
  issueVotes    IssueVote[]
  carRatings    CarRating[]
  favorites     FavoriteCar[]
  issueReports  IssueReport[]
  forumReplies  ForumReply[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  carSlug   String // Links comment to a specific car
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  votes     Vote[]

  @@index([carSlug])
}

model Vote {
  id        String   @id @default(cuid())
  type      String   // 'UP' or 'DOWN'
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId]) // User can vote only once per comment
}

model BlogPost {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  excerpt   String
  content   String
  image     String?
  category  String
  carSlug   String?  // Link to a car for forum discussions
  viewCount Int      @default(0)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  replies   ForumReply[]

  @@index([category])
  @@index([carSlug])
}

model Experience {
  id                String   @id @default(cuid())
  carBrand          String
  carModel          String
  carVariant        String?
  rating            Int      // 1-5
  title             String
  content           String
  images            String?  // JSON array of image URLs
  km                String?
  ownershipDuration String?
  pros              String   // JSON array stored as string
  cons              String   // JSON array stored as string
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([carBrand])
  @@index([rating])
}

// n8n tarafından otomatik eklenen kronikler
model Chronicle {
  id          String   @id @default(cuid())
  carSlug     String   // cars.ts'deki slug ile eşleşir
  
  expertNote  String?  // AI tarafından oluşturulan uzman notu
  pros        String   // JSON array - Artılar
  cons        String   // JSON array - Eksiler
  buyingTips  String   // JSON array - Alım ipuçları
  
  source      String   // Kaynak: "sikayetvar", "youtube", "forum"
  sourceUrl   String?  // Orijinal URL
  
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  issues      ChronicleIssue[]
  
  @@index([carSlug])
  @@index([status])
}

model ChronicleIssue {
  id          String   @id @default(cuid())
  chronicleId String
  chronicle   Chronicle @relation(fields: [chronicleId], references: [id], onDelete: Cascade)
  
  title       String
  description String
  category    String   // motor, sanziman, elektronik, govde, fren, suspansiyon
  createdAt   DateTime @default(now())
}

// API anahtarları için
model ApiKey {
  id          String   @id @default(cuid())
  name        String   // n8n, external-service etc.
  key         String   @unique
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  lastUsedAt  DateTime?
}

model Car {
  id               String   @id @default(cuid())
  slug             String   @unique
  brand            String
  model            String
  variant          String
  years            String
  generation       String?
  image            String?
  expertNote       String?
  price            Int?
  reliabilityScore Int
  searchCount      Int      @default(0)

  // JSON arrays for simple lists (JSON.stringify(string[]))
  pros             String 
  cons             String 
  buyingTips       String 

  issues           CarIssue[]
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([brand])
  @@index([model])
}

model CarIssue {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   // IssueCategory enum as string
  riskLevel   String   // RiskLevel enum as string
  affectedKm  String?
  repairCost  String?

  carId       String
  car         Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
}

// Sorun Onay Sistemi — Ben de yaşadım / Yaşamadım
model IssueVote {
  id        String   @id @default(cuid())
  type      String   // 'CONFIRM' or 'DENY'
  issueId   String   // CarIssue id or static issue id
  carSlug   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, issueId])
  @@index([carSlug])
}

// Araç Puanlama — 5 yıldız kategorili
model CarRating {
  id       String   @id @default(cuid())
  carSlug  String
  userId   String
  overall  Int      // 1-5
  motor    Int      // 1-5
  konfor   Int      // 1-5
  yakit    Int      // 1-5
  bakim    Int      // 1-5
  comment  String?
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, carSlug])
  @@index([carSlug])
}

// Favori Araçlar
model FavoriteCar {
  id      String   @id @default(cuid())
  userId  String
  carSlug String
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, carSlug])
  @@index([userId])
}

// Kullanıcı Sorun Bildirimi
model IssueReport {
  id          String   @id @default(cuid())
  carSlug     String
  userId      String
  title       String
  description String
  category    String
  km          String?
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@index([carSlug])
  @@index([status])
}

// Forum Yanıt Sistemi
model ForumReply {
  id        String   @id @default(cuid())
  content   String
  postId    String
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([postId])
}

model SystemSettings {
  id             String   @id @default(cuid())
  key            String   @unique
  value          String
  description    String?
}

model SystemLog {
  id        String   @id @default(cuid())
  action    String
  details   String?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
